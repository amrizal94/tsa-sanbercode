// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String @unique
  password String
  code     String @unique @default(uuid())
  books    Book[]
}

model Book {
  id           Int       @id @default(autoincrement())
  title        String    @default("untitled")
  description  String    @default("undescribed")
  image_url    String    @default("https://picsum.photos/200/300")
  release_year Int       @default(1980)
  price        String    @default("0")
  total_page   Int       @default(100)
  thickness    Thickness @default(tipis)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user         User     @relation(fields: [userCode], references: [code])
  userCode     String
  category     Category @relation(fields: [categoryCode], references: [code])
  categoryCode String
}

enum Thickness {
  tipis
  sedang
  tebal
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  code      String   @unique @default(uuid())
  Book      Book[]
}
